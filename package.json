        "@nestjs/mapped-types": "^2.1.0",

        "@nestjs/platform-express": "^10.3.0",

        "@nestjs/schedule": "^3.0.3",

        "@nestjs/typeorm": "^10.0.0",

        "axios": "^1.13.2",

        "class-transformer": "^0.5.1",

        "class-validator": "^0.14.3",

        "date-fns": "^4.1.0",

        "nodemailer": "^7.0.11",

